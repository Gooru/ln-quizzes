<ul>
  {{#each answers as |answer index|}}
    <li>
      {{!-- {{#if showCorrect}} --}}
      {{#if (eq answer.showCorrect true) }}
        <span class="answer-text">{{{gru-math-text text=answer.text}}}</span>
      {{else }}
        <span class="{{if answer.correct 'correct' 'incorrect'}} {{if anonymous 'anonymous'}}">{{answer.selectedOrderText}}</span>
      {{/if}}
    </li>
  {{/each}}
</ul>