<div class="question-panel">
    <div class="panel panel-default">
        <div class="panel-body">
            <h2>{{t "qz-question-viewer.question"}}</h2>
            <div class="question">
                <span class="text">{{gru-math-text text=questionBody}}</span>
            </div>
            <div>
              {{partial 'components/player/qz-question-information'}}
            </div>
        </div>
    </div>
  {{#if hintsToDisplay}}
      <div class="panel panel-primary hints">
          <div class="panel-heading">
            {{t "common.hints"}}
          </div>
          <div class="panel panel-default">
              <div class="panel-body">
                  <ol class="hints">
                    {{#each hintsToDisplay as |hint|}}
                        <li>{{{hint.hintText}}}</li>
                    {{/each}}
                  </ol>
              </div>
          </div>
      </div>
  {{/if}}
  {{#if isExplanationShown}}
      <div class="panel panel-primary explanation">
          <div class="panel-heading">
            {{t "common.explanation"}}
          </div>
          <div class="panel panel-default">
              <div class="panel-body">
                {{#if isExplanationShown}}
                    <p class="explanation">{{{question.explanation}}}</p>
                {{/if}}
              </div>
          </div>
      </div>
  {{/if}}
</div>

<div class="answers-panel">
    <div class="panel panel-default">
        <div class="panel-body">
        <h2>{{t "qz-question-viewer.answer"}}</h2>

        <form {{action "submitQuestion" on="submit"}}>
          {{component (question-config question.type 'component.player')
          instructionsActionTextKey=instructionsActionTextKey
          question=question
          readOnly=isInputDisabled
          userAnswer=questionResult.answer
          onAnswerChanged="changeAnswer"
          onAnswerCleared="clearAnswer"
          onAnswerCompleted="completeAnswer"
          onAnswerLoaded="loadedAnswer"}}
          {{#if showFeedback}}
              <div class="feedback">
                <div class="feedback-content">
                  <div class="feedback-emotion {{if questionResult.correct "correct" "incorrect"}}">
                    <svg>
                      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/assets/emoji-one/emoji.svg#{{feedbackUnicode}}"></use>
                    </svg>
                  </div>
                  <span class="feedback-text">
                    {{t isCorrectMessageKey}}
                  </span>
                </div>
              </div>
          {{/if}}
          <div class="actions">
            <button type="submit" class="save btn btn-success" disabled="{{if isSubmitDisabled true null}}">{{t buttonTextKey}}</button>
          </div>
        </form>
      </div>
    </div>
</div>
