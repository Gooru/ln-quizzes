<div class="btn-group drop-menu">
  {{#if isStudent }}
    <button class="btn btn-info share out-of-scope" {{action 'share'}}>{{gru-icon name='send'}} <span>{{t "class.analytics.performance.actions.share"}}</span></button>
  {{else}}
    <button class="btn btn-info edit" {{action 'editContent'}}> {{gru-icon name='mode_edit'}}<span>{{t "class.analytics.performance.actions.edit"}}</span></button>
  {{/if}}
  <button class="btn btn-info download out-of-scope" {{action 'download'}}>{{gru-icon name='file_download'}} <span>{{t "class.analytics.performance.actions.download"}}</span></button>
  <button class="btn btn-info full-screen hidden-sm hidden-xs {{if isFullScreen 'exit-full-screen' 'view-full-screen'}}" {{action 'toggleFullScreen'}}>
    {{#if isFullScreen}}
      {{gru-icon name='fullscreen_exit'}} <span>{{t "class.analytics.performance.actions.exitFullScreen"}}</span>
    {{else}}
      {{gru-icon name='fullscreen'}} <span>{{t "class.analytics.performance.actions.fullScreen"}}</span>
    {{/if}}
  </button>
  {{#unless collectionLevel}}
    <button class="selected-filter btn btn-info dropdown-toggle" type="button" data-toggle="dropdown">
      {{gru-icon name='spellcheck'}} <span>{{t dropdownFilterText}}</span>
    </button>
    <ul class="dropdown-menu">
      <li class="dropdown-menu-item assessment {{if isFilterByAssessment 'selected' }}"><a {{action 'filter' 'assessment'}}>{{t "class.analytics.performance.actions.assessment"}}</a></li>
      {{!-- TODO Uncomment this option once BE is ready with the support for Collection and  Both
      <li class="dropdown-menu-item collection {{if isFilterByCollection 'selected' }}"><a {{action 'filter' 'collection'}}>{{t "class.analytics.performance.actions.collection"}}</a></li>
      <li class="dropdown-menu-item both {{if isFilterByBoth 'selected' }}"><a {{action 'filter' 'both'}}>{{t "class.analytics.performance.actions.both"}}</a></li>
      --}}
    </ul>
  {{/unless}}
</div>
