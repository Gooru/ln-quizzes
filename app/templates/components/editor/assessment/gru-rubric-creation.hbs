<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active from-web tab">
        <a href="#from-web" aria-controls="fromWeb" role="tab" data-toggle="tab" {{action 'selectOption' 'fromWeb'}}>
            <span class="lead">{{t 'gru-rubric-creation.from-web'}}</span>
        </a>
    </li>
    <li role="presentation" class="from-computer tab">
        <a href="#from-computer" aria-controls="fromComputer" role="tab" data-toggle="tab" {{action 'selectOption' 'fromComputer'}}>
            <span class="lead">{{t 'gru-rubric-creation.from-computer'}}</span>
        </a>
    </li>
</ul>
<div class="content tab-content">
    <div role="tabpanel" class="tab-pane {{if showFromWeb 'active'}}" id="from-web">
        <div class="add-from-web">
            <label class="url-label">
              {{validation.gru-input model=rubric valuePath='url' placeholder=(t 'gru-rubric-creation.url')}}
            </label>
            <button class="btn btn-default btn-primary add-btn" title={{t 'common.add'}}>{{t 'common.add'}}</button>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane {{if showFromComputer 'active'}}" id="from-computer">
        <div class="add-from-computer">
            FROM COMPUTER
        </div>
    </div>
</div>