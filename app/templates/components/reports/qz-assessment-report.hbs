<div class="qz-assessment-summary">
  <div class="reports-owner">
    {{#if profile.fullName }}
      <span> {{profile.fullName}} </span>
    {{else}}
      <span>{{profile.username}}</span>
    {{/if}}
  </div>
  {{reports/assessment/qz-summary
  contextResult=contextResult
  areQuestionLinksHidden=areAnswersHidden
  onSelectAttempt='selectAttempt'
  onBubbleSelect='bubbleSelect'
  isRealTime=isRealTime
  showAttempts=showAttempts
  profile=profile
  questionCount=resultsQuestions.length
  resourceCount=resultsResources.length
  oeQuestionCount=resultsOpenEnded.length
  }}
  {{#if tags.length}}
    <div class="standard-tags">
      {{taxonomy/gru-taxonomy-tag-list tags=tags tagsVisible=4  showDescription=true }}
    </div>
  {{/if}}
  {{#if areAnswersHidden}}
    <div class="hidden-report">
      <span>{{t "qz-assessment-report.hidden-report"}}</span>
    </div>
  {{else}}
    {{#if resultsQuestions.length}}
      {{reports/assessment/qz-questions
      title=(t "qz-assessment-report.questions")
      isAnswerKeyHidden=isAnswerKeyHidden
      results=resultsQuestions}}
    {{/if}}
    {{#if resultsOpenEnded.length}}
      {{reports/assessment/qz-questions
      title=(t "qz-assessment-report.open-ended")
      isAnswerKeyHidden=isAnswerKeyHidden
      results=resultsOpenEnded
      showScore=false
      viewMode='open-ended'}}
    {{/if}}
    {{#if resultsResources.length}}
      {{reports/assessment/qz-resources
      title=(t "qz-assessment-report.resources")
      isAnswerKeyHidden=isAnswerKeyHidden
      results=resultsResources
      showReactionBar=true}}
    {{/if}}
  {{/if}}
</div>