<table class="table table-fixed">
    <thead>
    <tr>
        <th class="num-header col-xs-1"><a {{action 'sortBy' (if isTeacher 'createdDate' 'assignedDate')}}><span>{{gru-icon name='swap_vert'}}</span></a></th>
        {{#unless isTeacher}}
            <th class="score-header col-md-2 col-sm-2 col-xs-3"><a {{action 'sortBy' 'score'}}>{{t 'common.score'}} <span>{{gru-icon name='swap_vert'}}</span></a></th>
        {{/unless}}
        <th class="title-header col-md-3 col-sm-5 col-xs-8"><a {{action 'sortBy' 'title'}}>{{t 'assignments-view.title'}}<span>{{gru-icon name='swap_vert'}}</span></a></th>

        {{#if isTeacher}}
            <th class="modified-date-header hidden-sm hidden-xs col-md-3"><a {{action 'sortBy' 'modifiedDate'}}>{{t 'assignments-view.dateModified'}}<span>{{gru-icon name='swap_vert'}}</span></a></th>
            <th class="students-assigned-header hidden-sm hidden-xs col-md-2">{{t 'assignments-view.studentsAssigned'}}</th>
            <th class="actions-header hidden-sm hidden-xs col-md-3">{{t 'assignments-view.actions'}}</th>
        {{else}}
            <th class="standards-header hidden-sm hidden-xs col-md-2">{{t 'assignments-view.standards'}}</th>
            <th class="date-header hidden-sm hidden-xs col-md-2"><a {{action 'sortBy' 'dueDate'}}>{{t 'assignments-view.dueDate'}}<span>{{gru-icon name='swap_vert'}}</span></a></th>
            <th class="attempts-header hidden-xs col-md-2 col-sm-4"><a {{action 'sortBy' 'attempts'}}>{{t 'assignments-view.attempts'}}<span>{{gru-icon name='swap_vert'}}</span></a></th>
        {{/if}}
    </tr>
    </thead>
    <tbody style="{{tableContentHeight}}">
   {{#each assignments as |assignment index|}}
        <tr class="{{if assignment.selected 'selected'}}" {{action 'selectAssignment' assignment}}>
            <td class="num col-xs-1">
              {{plus-one index}}
            </td>
          {{#unless isTeacher}}
            <td class="score col-md-2 col-sm-2 col-xs-3">
                <span class="score" style="background-color: {{ gradeColor (if assignment.hasStarted assignment.score 'NA') }}">
                  {{if assignment.hasStarted assignment.score '--'}}%
                </span>
            </td>
          {{/unless}}
            <td class="title col-md-3 col-sm-5 col-xs-8">{{assignment.title}}</td>
          {{#if isTeacher}}
              <td class="modified-date hidden-sm hidden-xs col-md-3">{{formatDate assignment.modifiedDate 'h:mm a MM/DD/YYYY'}}</td>
              <td class="students-assigned hidden-sm hidden-xs col-md-2">{{assignment.totalStudents}}</td>
              <td class="actions hidden-xs hidden-sm col-md-3  col-sm-4">
                  <button class="btn btn-default add-student">{{gru-icon name='person_add'}}</button>
                  <button class="btn btn-default real-time"><span class="real-time-icon"></span></button>
              </td>
          {{else}}
              <td class="standards hidden-sm hidden-xs col-md-2">{{assignment.standards}}</td>
              <td class="due-date hidden-sm hidden-xs col-md-2">{{formatDate assignment.dueDate 'h:mm a MM/DD/YYYY'}}</td>
              <td class="attempts hidden-xs col-md-2  col-sm-4">{{assignment.attempts}}</td>
            {{/if}}
        </tr>
    {{/each}}
    </tbody>
</table>
