<div class="qz-content">
  {{#if resource.isQuestion}}
    {{player.qz-question-viewer
      buttonTextKey=buttonTextKey
      instructionsActionTextKey=instructionsActionTextKey
      collection=collection
      question=resource
      questionResult=resourceResult
      role=role
      submitted=submitted
      onSubmitQuestion="submitQuestion"
    }}
  {{else}}
    {{player.qz-resource-viewer
      resource=resource
      collection=collection
      isNotIframeUrl=isNotIframeUrl
    }}
  {{/if}}
</div>
