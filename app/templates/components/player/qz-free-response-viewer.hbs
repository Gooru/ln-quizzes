{{#unless showFullRubric}}
  <div class="rubric-response {{if hasRubric 'rubric' 'no-rubric'}}">
    <div class="panel prompt">
      <div class="panel-body">
        <div class="icon">
          <i></i>
        </div>
        <div class="question-text">
          <span class="title">{{t 'qz-free-response-viewer.prompt'}}</span>
          {{gru-math-text text=questionText}}
        </div>
      </div>
    </div>
    <div class="panel panel-default question-response">
      <div class="panel-body">
        {{qz-rich-text-editor content=answer model=answer valuePath='description' didValidate=didValidate}}
      </div>
    </div>
    <div class="actions">
      <button type="submit" class="save btn btn-success" disabled="{{if isSubmitDisabled true null}}" {{action 'submitQuestion'}}>{{t buttonTextKey}}</button>
    </div>
  </div>
{{/unless}}
{{#if hasRubric}}
  <div class="rubric-information {{if showFullRubric 'full-rubric'}}">
    <div class="header" {{action 'showFullRubric'}}>
      {{gru-icon name="keyboard_arrow_left"}}
      <span>{{t 'qz-free-response-viewer.full-rubric'}}</span>
    </div>
  </div>
{{/if}}
