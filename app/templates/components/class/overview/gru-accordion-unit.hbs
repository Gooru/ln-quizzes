<div class="unit" role="tab" id="{{elementId}}-heading">
  <strong class="panel-title">
    <a class="collapsed title" role="button" data-toggle="collapse" href="#{{elementId}}-content"
       aria-expanded="false" aria-controls="{{elementId}}-content" {{action "selectUnit" model.id}}>
      <span class="title">
        {{course-sections-prefix index=index type='unit' longName=true}}&period;&nbsp;&nbsp;{{model.title}}
      </span>
    </a>
    <span>
      {{#if model.lessonCount}}
        <b>{{model.lessonCount}}</b> {{t "common.lessonObj" count=model.lessonCount}}
      {{else}}
      {{!-- TODO: Add the lessons here--}}
        <b></b> {{!--t "common.lessonObj" count=0--}}
      {{/if}}
    </span>
  </strong>

  {{gru-user-icons
    showOnlyNumbers=true
    membersCount=model.membersCount
    users=model.users
    viewThreshold=3
    viewMoreIn='modal'}}
</div>

<div id="{{elementId}}-content"
     data-index="{{componentIndex}}"
     class="panel-collapse collapse"
     role="tabpanel"
     aria-labelledby="{{elementId}}-heading">

  <div class="panel-body">
    <ol class="panel-group" role="tablist" aria-multiselectable="true">

    {{#if loading}}
      {{three-bounce-spinner}}
    {{else}}

      {{#each items as |lesson index|}}

        {{class.overview.gru-accordion-lesson
          currentClass=currentClass
          classMembers=classMembers
          unitId=model.id
          model=lesson
          index=index
          onSelectResource=(action 'selectResource')
          onSelectLesson=(action 'updateLesson')
          onLaunchOnAir=(action 'launchOnAir')
          currentResource=currentResource
          parsedLocation=parsedLocation
          isTeacher=isTeacher}}

        {{else}}
          <li>{{t "common.contentUnavailable"}}</li>
        {{/each}}

      {{/if}}

    </ol>

  </div>
</div>
