<div class="controller content-assessments">
  <div class="assessments clearfix">
    {{#each assessments as |assessment|}}
      <div class="card">
        {{cards.gru-collection-card
        collection=assessment
        editEnabled=isMyProfile
        onEditCollection="editAssessment"
        onRemixCollection="remixAssessment"
        onOpenContentPlayer="openContentPlayer"}}
      </div>

    {{else}}

      <div class="panel add-content panel-default">
        <div class="panel-body">
          {{gru-icon name='explore'}}

          {{#if isMyProfile}}
            <p>{{{t "common.add-content-prompt" type=(t "common.an-assessment")}}}</p>
            <button class="btn btn-success" {{action "showModal" "content.modals.gru-assessment-new"}}>
              {{t "common.add"}} {{t "common.assessment"}}
            </button>
          {{else}}
            <p>{{{t "common.no-assessments-to-display"}}}</p>
          {{/if}}
        </div>
      </div>

    {{/each}}
  </div>
  {{#if showMoreResultsButton}}
    <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
  {{/if}}
</div>
