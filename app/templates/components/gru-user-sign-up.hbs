<div class="modal-header">
  <button type="button" class="close" aria-label="{{t 'common.close'}}" {{action "showModal" "gru-user-sign-up-cancel"}}>
    <span aria-hidden="true">Ã—</span>
  </button>
  <h4 class="modal-title">{{t "common.signUp"}}</h4>
</div>
<div class="modal-body">
  <div class="wrapper">
    <div class="main">
      <form {{action "signUp" on="submit"}}>
        <div class="intro">{{t "gru-user-sign-up.infoMessage"}}</div>
        <div class="content">
          <div class="row">
            <div class="col-xs-6">
              {{validation.gru-input model=user valuePath='username' placeholder='Username'}}

            </div>
            <div class="col-xs-5 pa-md-left-2 pa-md-right-2 pa-sm-left-2 pa-sm-right-2">
              {{validation.gru-datepicker model=user valuePath='dateOfBirth' placeholder=(t "gru-user-sign-up.dateOfBirth")}}
            </div>
            <div class="col-xs-1">
                <div class="img-question" data-toggle="tooltip" data-html="true" data-placement="bottom"
                     title={{t "gru-user-sign-up.birthdayToolTip"}}></div>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-6">
              {{validation.gru-input model=user valuePath='firstName' placeholder='First Name'}}

            </div>
            <div class="col-xs-5 pa-md-left-2 pa-md-right-2 pa-sm-left-2 pa-sm-right-2">
              {{validation.gru-input model=user valuePath='lastName' placeholder='Last Name'}}
            </div>
          </div>

          <div class="row">
            <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">
              {{validation.gru-input model=user valuePath='email' placeholder='Email'}}
            </div>
          </div>
          <div class="row">
            <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">
              {{validation.gru-input type='password' model=user valuePath='password' placeholder='Password'}}
            </div>
          </div>
          <div class="row">
            <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">

              {{validation.gru-input type='password' model=user valuePath='rePassword' placeholder='Confirm Password'}}
            </div>
          </div>
          <div class="row">
              <div class="col-xs-11 pa-md-right-0 pa-sm-right-0">
                  {{validation.gru-radio model=user valuePath='role' onCheck='setRoleValue'}}
              </div>
          </div>

        </div>

        <div class="accept-terms">
          <span class="gwt-InlineLabel" id="lblAgree">By clicking Sign Up, I agree to the</span>
          <a class="org-ednovo-gooru-client-mvp-authentication-SignUpCBundle-SignUp-termsAlignStyle"
             id="lnkCopyRight">Copyright Policy,</a>
          <a class="org-ednovo-gooru-client-mvp-authentication-SignUpCBundle-SignUp-termsAlignStyle"
             id="lnkTermsAndPrivacy">Terms of Service</a>
          <span class="gwt-InlineLabel" id="spnAndText"> and </span>
          <a class="org-ednovo-gooru-client-mvp-authentication-SignUpCBundle-SignUp-termsAlignStyle"
             id="lnkPrivacy">Privacy Policy.</a>
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn btn-primary btn-sign-up">Sign Up</button>
        </div>

      </form>
    </div>
  </div>
</div>
